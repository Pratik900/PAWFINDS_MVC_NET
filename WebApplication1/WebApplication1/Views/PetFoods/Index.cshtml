@model IEnumerable<WebApplication1.Models.PetFood>

@{
    ViewData["Title"] = "PetFood";
}

<p>
    <a asp-action="Create" style="color: orange;">Add Food Services</a>
</p>

<div class="row">
    @foreach (var item in Model) 
    {
        <div class="col-md-3 mb-3">
                <div class="card" style="width: 18rem;">
                <div class="card-body" style="color: black;">

                        <h5 class="card-title"> @Html.DisplayFor(modelItem => item.ProductName)</h5>
                    <p class="card-text" style="color: black;">
                        <strong>Brand:</strong> @Html.DisplayFor(modelItem => item.Brand)<br />
                        <strong>Calories:</strong> @Html.DisplayFor(modelItem => item.Calories)<br />
                        <strong>Species:</strong> @Html.DisplayFor(modelItem => item.Species)<br />
                    </p>

                        <a asp-action="Edit" asp-route-id="@item.Id" class="card-link" style="color: orange;">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="card-link" style="color: orange;">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="card-link" style="color: orange;">Delete</a>
                    </div>
                </div>
        </div>
    }
</div>
